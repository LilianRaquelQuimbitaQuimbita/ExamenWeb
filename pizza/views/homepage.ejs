<div class="container">
  <div class="row">

    <div class="col-md-4"></div>
    <div class="col-md-4">
  <!-- Login Form -->
  <div class="nb-login">
    <h3 class="scenter">Sign In</h3>
    <form action="/Vista/login" method="post">
      <div class="form-group">
        <label>Username:</label>
        <input type="email"
               class="form-control"
               placeholder="Ingresar Correo"
               id="correo"
               name="correo"
        >
      </div>
      <div class="form-group">
        <label>Password:</label>
        <input type="password"
               class="form-control"
               placeholder="Ingresar Password"
               id="password"
               name="password">
      </div>
      <button type="submit" class="btn btn-block"
      >Sign In</button>
    </form>
  </div>
</div>
